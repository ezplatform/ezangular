{
  "name": "ezfinhub",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ng": "nx",
    "preinstall": "node ./scripts/preinstall.js",
    "postinstall": "node ./scripts/postinstall.js && node ./decorate-angular-cli.js && ngcc --properties es2015 browser module main",
    "nx": "nx",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "nx workspace-lint && ng lint",
    "e2e": "ng e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "===== SINGLE SPA =====": "",
    "build:single-spa:sample": "ng build sample --prod",
    "serve:single-spa:sample": "ng s --project sample --disable-host-check --port 4200 --live-reload false",
    "===== FIREBASE FUNCTION =====": "",
    "firebase:serve": "concurrently --kill-others \"yarn run build functions --watch\" \"firebase serve --only functions\"",
    "firebase:shell": "concurrently --kill-others \"yarn run build functions --watch\" \"firebase functions:shell\" --raw",
    "firebase:deploy:mf": "firebase deploy --only functions:microFrontend",
    "firebase:deploy:ngsw": "firebase deploy --only functions:ngsw"
  },
  "dependencies": {
    "@angular/animations": "12.1.1",
    "@angular/common": "12.1.1",
    "@angular/compiler": "12.1.1",
    "@angular/core": "12.1.1",
    "@angular/forms": "12.1.1",
    "@angular/platform-browser": "12.1.1",
    "@angular/platform-browser-dynamic": "12.1.1",
    "@angular/router": "12.1.1",
    "@angular/service-worker": "12.1.1",
    "ng-zorro-antd": "12.0.0",
    "rxjs": "6.6.7",
    "single-spa": "5.9.3",
    "single-spa-angular": "5.0.1",
    "tslib": "2.3.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "12.1.0",
    "@angular-devkit/build-angular": "12.1.1",
    "@angular-eslint/eslint-plugin": "12.2.2",
    "@angular-eslint/eslint-plugin-template": "12.2.2",
    "@angular-eslint/template-parser": "12.2.2",
    "@angular/cli": "12.1.1",
    "@angular/compiler-cli": "12.1.1",
    "@angular/language-service": "12.1.1",
    "@eztool/import-map-deployer": "4.4.8",
    "@eztool/prettier-plugin-formatter": "1.0.1",
    "@nrwl/angular": "12.5.7",
    "@nrwl/cli": "12.5.7",
    "@nrwl/cypress": "12.5.7",
    "@nrwl/eslint-plugin-nx": "12.5.7",
    "@nrwl/jest": "12.5.7",
    "@nrwl/linter": "12.5.7",
    "@nrwl/node": "12.5.7",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "12.5.7",
    "@nrwl/workspace": "12.5.7",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.1",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "concurrently": "6.2.0",
    "cypress": "7.7.0",
    "dotenv": "10.0.0",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.11.3",
    "firebase-admin": "9.10.0",
    "firebase-functions": "3.14.1",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-preset-angular": "9.0.4",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  },
  "importSort": {
    ".js,.jsx,.ts,.tsx": {
      "parser": "typescript",
      "style": "eslint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,scss}": [
      "pretty-quick --staged",
      "git add -f"
    ],
    "*.html": [
      "node ./scripts/html-formatter.js --staged",
      "git add -f"
    ]
  }
}
